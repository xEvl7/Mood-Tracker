            android:name=".SummaryPage"
            android:exported="false"
            android:parentActivityName=".mainPage" />
        <activity
            android:name=".pickMood"
            android:exported="false"
            android:parentActivityName=".mainPage" />
        <activity
            android:name=".mainPage"
            android:exported="false" />
