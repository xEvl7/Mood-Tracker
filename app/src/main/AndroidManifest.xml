        <activity
            android:name=".LoginPin"
            android:exported="false" />
        <activity
            android:name=".pinLockSettings"
            android:exported="false" />
        <activity
            android:name=".ForgetPassword"
            android:exported="false" />
        <activity
            android:name=".PrivacyPolicy"
            android:exported="false" />
        <activity
            android:name=".TermOfService"
            android:exported="false" />
        <activity
            android:name=".Help"
            android:exported="false" />

        <activity
