<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.utar.moodtracker">
    <!-- Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo2"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoodTracker">

        <receiver android:name="my.edu.utar.moodtracker.ReminderReceiver" />

        <activity
            android:name="my.edu.utar.moodtracker.Reminder"
            android:exported="false"
            android:parentActivityName="my.edu.utar.moodtracker.mainPage"/>
        <activity
            android:name="my.edu.utar.moodtracker.SummaryPage"
            android:exported="false"
            android:parentActivityName="my.edu.utar.moodtracker.mainPage" />
        <activity
            android:name="my.edu.utar.moodtracker.quotePage"
            android:exported="false"
            android:parentActivityName="my.edu.utar.moodtracker.mainPage" />
        <activity
            android:name="my.edu.utar.moodtracker.pickMood"
            android:exported="false"
            android:parentActivityName="my.edu.utar.moodtracker.mainPage" />
        <activity
            android:name="my.edu.utar.moodtracker.mainPage"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.diaryPage"
            android:exported="false"
            android:parentActivityName="my.edu.utar.moodtracker.mainPage" />
        <activity
            android:name="my.edu.utar.moodtracker.LoginPin"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.pinLockSettings"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.ForgetPassword"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.PrivacyPolicy"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.TermOfService"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.Help"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.ReminderSettings"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.changePassword"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.changeUsername"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.AccountInformation"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.Register"
            android:exported="false" />
        <activity
            android:name="my.edu.utar.moodtracker.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="my.edu.utar.moodtracker.Settings"
            android:exported="true" />
    </application>

</manifest>